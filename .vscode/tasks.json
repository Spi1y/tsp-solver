{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
	"type": "shell",	
	"cwd": "${workspaceFolder}",
    "tasks": [
		{
			"label": "Build",
			"command": "go build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"focus": true
			},
			"problemMatcher": [
				"$go"
			]
		},
    ]
}